port = "{{ emacsd_port }}"
title_format = "emacsd @ {{ '{{' }} .RemoteAddr {{ '}}' }}"
environment = {"TERM" = "xterm-256color"}

preferences {
  cursor_blink = true
  font_family = "'DejaVu Sans Mono', 'Everson Mono', FreeMono, 'Menlo', 'Terminal', monospace"
  font_size = 15
  font_smoothing = "antialiased"
}